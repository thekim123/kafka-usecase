<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.namusd.jwtredis.persistence.mapper.VideoMapper">
    <select id="findVideoPage" resultType="com.namusd.jwtredis.model.entity.video.Video">
        SELECT video_id, video_title, owner_id, video_file_id
        FROM video
        WHERE owner_id=#{loginUser.id}
        <if test="page.sort != null and page.sort != '' and page.sort != 'UNSORTED'" >
            ORDER BY ${page.sort}
        </if>
        LIMIT #{page.size}
        OFFSET #{page.page}
    </select>

    <select id="countAll" resultType="int">
        SELECT COUNT(*)
        FROM video
    </select>

</mapper>

